<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="TendencyDAO">
	<!-- mybatis 자료형 : int / hashmap / string -->
	<insert id="insertTendency" parameterType="customer">
		INSERT INTO TENDENCY(TENDENCY_ID, CUSTOMER_ID, ART, SOCIAL, ECONOMIC, TECHNOLOGY, LITERATURE, HISTORY) VALUES(TENDENCY_ID_SEQ.NEXTVAL, #{customerId}, 0, 0, 0, 0, 0, 0)
	</insert>
	<update id="increaseTendency" parameterType="hashmap">
		update tendency set ${genre}=${genre}+1 where customer_id=#{customerId}
	</update>
</mapper>